@using Test_UploadFile.ViewModels
@model List<Emploes_out>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<div class="container">
    <div class="mb-3 mt-3">
        <form method="post" action="/TestUpload/Index" enctype="multipart/form-data">
            <div class="mb-3">
                <label>Choos the file-List of employes</label>
                <input type="file" accept="*.csv" id="file_input" name="file_input" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="submit" id="btnUpload" value="Identifity employees" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="mb-3 mt-5">
    @{
        if (Model != null)
        {
            <h2>Table of employes</h2>
            <div class="row">
                <div class="col-md-6">
                    <table class="table-striped">
                        <tbody>
                            <tr>
                                <th>
                                    Emplouee ID-1
                                </th>
                                <th>
                                    Emplouee ID-2
                                </th>
                                <th>
                                    Project ID
                                </th>
                                <th>
                                    Days worked
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr><td>@item.Employee_id_1</td><td>@item.Employee_id_2</td><td>@item.Priject_id</td><td>@item.Count_days_worked</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>

